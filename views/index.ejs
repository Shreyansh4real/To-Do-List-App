<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Metadata -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List App</title>

    <!-- Include Font Awesome icons -->
    <script src="https://kit.fontawesome.com/8be8b5898e.js" crossorigin="anonymous"></script>

    <!-- Include Bootstrap CSS from a Content Delivery Network (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

</head>

<body>
    <!-- Navigation bar -->
    <nav class="navbar bg-dark navbar-expand-lg " data-bs-theme="dark">
        <div class="container-fluid mx-3">
            <!-- Brand -->
            <a class="navbar-brand" href="#">To-Do List App<i class="fa-regular fa-clipboard ps-2"></i></a>
            <!-- Toggler button for small screens -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Home link -->
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <!-- Features link -->
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <!-- About link -->
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                </ul>
                <!-- Authentication buttons -->
                <div class="ms-lg-4 mt-sm-2 mt-lg-0">
                    <button type="button" class="btn btn-outline-light me-2">Login</button>
                    <button type="button" class="btn btn-primary">Sign-up</button>
                </div>
            </div>
        </div>
    </nav>


    <!-- Main content -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">To-Do List App</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <!-- List of tasks -->
                <ul class="list-group">
                    <!-- Loop through each task item -->
                    <% for( let i=0; i<newListItems.length; i++ ) { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <!-- Display task name -->
                            <%= newListItems[i] %>
                                <span>
                                    <!-- Form for delete task -->
                                    <form action="/taskDelete/<%= i %>" method="post">
                                        <!-- Button to delete task -->
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        <!-- Button to mark task as done -->
                                        <button type="submit" class="btn btn-sm btn-success">Done</button>
                                    </form>
                                </span>
                        </li>
                        <% } %>

                </ul>
                <!-- Form to add new task -->
                <form action="/" method="post" class="mt-3">
                    <div class="input-group">
                        <!-- Input field for new task -->
                        <input type="text" class="form-control" placeholder="Add new task" autocomplete="off"
                            name="newItem" />
                        <!-- Button to add new task -->
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- Include Bootstrap Scripts from a Content Delivery Network (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>

</html>